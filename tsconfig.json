{
  "compilerOptions": {
    "target": "ES2020", // allows top-level await in async functions
    "module": "CommonJS", // required for better-sqlite3
    "moduleResolution": "node",
    "esModuleInterop": true, // allows default imports for CJS libs
    "strict": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
     "typeRoots": ["./src/types", "./node_modules/@types"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
